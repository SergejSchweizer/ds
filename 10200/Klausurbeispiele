length(mdeaths)
m<-mean(mdeaths)
sd1<-sd(mdeaths)
s<-seq(0,4000,length=4001)
par(new=T)
plot(s,dnorm(s,m,sd1),lwd=3,type="l",col="green",ylim=c(0,0.002))
par(new=T)
plot(s,dexp(s,1/m),lwd=3,type="l",col="red",ylim=c(0,0.002))
par(new=T)
